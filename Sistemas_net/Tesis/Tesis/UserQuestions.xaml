<Window x:Class="Tesis.UserQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tesis"
        mc:Ignorable="d"
        Title="UserQuestions" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Pregunta: " x:Name="NumberPregunta" HorizontalAlignment="Center" FontSize="16" Margin="0,10,0,390" FontWeight="Bold" />
        <TextBlock Text="Pregunta: " x:Name="TxtPregunta" HorizontalAlignment="Center" Width="416" VerticalAlignment="Top" Height="104" Margin="0,83,0,0" />
        <TextBlock Text="Respuesta" Name="TxtRespuesta" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"  />
        <TextBox x:Name="TextResponse" MaxLength="300" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Height="70" Margin="0,240,0,0" />
        <Button Content="Enviar" Name="btnPredict" Click="btnPredictEmotion_Click" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,315,0,0" Width="400" Height="30"  />
        <Button Content="Salir" Name="btnExit" Click="btnExit_Click" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,315,0,0" Width="400" Height="30" />
    </Grid>
</Window>
